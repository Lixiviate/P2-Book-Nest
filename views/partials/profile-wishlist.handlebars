<details>
    <summary role="button" class="secondary">{{item.title}}</summary>
    <form class="wishlist-form" data-isbn="{{item.isbn}}">
        <p>
            <img src="{{item.cover_img}}" alt="{{item.title}}">
            <p>by: {{item.author}}</p>
            <p>ISBN: {{item.isbn}}</p>
        </p>
        <div class="grid book-details">
            <button class="remove-from-wishlist" type="submit">Remove from Wishlist</button>
        </div>
    </form>
</details>
